{
  "name": "leet-tracker-extension",
  "version": "0.1.1",
  "description": "Companion Chrome extension for LeetTracker, a LeetCode progress tracker.",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build --mode development",
    "build:prod": "vite build --mode production --config vite.config.prod.js",
    "clean": "rm -rf build && echo 'Build artifacts cleaned'",
    "zip": "cd build && zip -r leet-tracker-extension.zip . -x '*.DS_Store' '.vite/*' && cd .. && echo 'âœ… Created build/leet-tracker-extension.zip'",
    "build:prod:zip": "npm run build:prod && npm run zip",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dmiska25/leet-tracker-extension.git"
  },
  "author": "Dylan Miska",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@eslint/js": "^9.39.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "diff-match-patch": "^1.0.5",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.11",
    "prettier": "^3.7.4",
    "terser": "^5.44.0",
    "vite": "^7.1.12",
    "vitest": "^4.0.15"
  }
}
